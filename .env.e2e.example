# E2E Test Environment Variables
# Copy this file to .env.e2e and update with your actual values
# This file is used for E2E testing with Playwright
# Separate from development (.env) and unit test environments

# Database
DATABASE_URL=postgresql://user:password@localhost/clinic_bot_e2e
E2E_DATABASE_URL=postgresql://user:password@localhost/clinic_bot_e2e

# API Configuration
API_BASE_URL=http://localhost:8001
VITE_API_BASE_URL=http://localhost:8001/api

# Frontend URL (for OAuth redirects and CORS)
FRONTEND_URL=http://localhost:5174

# Test Configuration
E2E_TEST_MODE=true

# Authentication (test values)
JWT_SECRET_KEY=test-jwt-secret-key-for-e2e-tests-only
SYSTEM_ADMIN_EMAILS=test@example.com

# JWT Token Configuration
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=180

# Google OAuth Configuration (test values - not used in E2E tests)
GOOGLE_CLIENT_ID=test-google-client-id
GOOGLE_CLIENT_SECRET=test-google-client-secret

# LINE Configuration (test values - mocked in E2E tests)
LINE_CHANNEL_SECRET=test-channel-secret
LINE_CHANNEL_ACCESS_TOKEN=test-access-token
LIFF_ID=test-liff-id

# OpenAI API Configuration (optional for E2E tests)
OPENAI_API_KEY=

# Agent Debug Configuration
AGENT_DEBUG=false

# Environment setting
ENVIRONMENT=test
