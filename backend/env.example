# Database
DATABASE_URL=postgresql://user:password@localhost/clinic_bot

# API Configuration
API_BASE_URL=http://localhost:8000

# Frontend URL (for OAuth redirects and CORS)
# Set to your local network IP (e.g., http://10.0.0.25:5173) for phone testing
FRONTEND_URL=http://localhost:5173

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Authentication
JWT_SECRET_KEY=your_jwt_secret_key_here_use_a_long_random_string
SYSTEM_ADMIN_EMAILS=admin@yourcompany.com,dev@yourcompany.com

# JWT Token Configuration
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=180

# Agent Debug Configuration
# Set to true to enable detailed agent debugging (suppresses third-party library logs)
AGENT_DEBUG=false

# S3 Storage Configuration
S3_BUCKET=your-bucket-name
S3_REGION=ap-southeast-1
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
# S3_ENDPOINT_URL=http://localhost:9000  # For MinIO/Localstack
# S3_CUSTOM_DOMAIN=cdn.yourdomain.com    # For CloudFront
S3_ALLOWED_DOMAINS=localhost,127.0.0.1,clinic-bot,amazonaws.com

# Upload Limits
MAX_UPLOAD_SIZE_MB=10
